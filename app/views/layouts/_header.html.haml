.sidebar.pure-u
  %header.header
    %hgroup
      %h1.brand-title= t('.title')
      %h2.brand-tagline= t '.description'
    %nav.nav
      %ul.nav-list
        %li.nav-item
          %a.pure-button= link_to t('.posts'), posts_path
        %li.nav-item
          %a.pure-button
            - if can? :manage, :all
              = link_to t('.admin'), admin_root_path
            - unless user_signed_in?
              =link_to t('.login'), user_omniauth_authorize_path(:github)
        %li.nav-item
          - if user_signed_in?
            .user-link
              = link_to (image_tag gravatar(current_user.email), class: 'avatar'), edit_profile_path(current_user)
        %br
        %li.nav-item
          %a.pure-button
            = form_tag search_path, method: :get do
              = text_field_tag :search, params[:search], placeholder: t('psearch'), class: 'search-query'
